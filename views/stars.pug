extends layout

block content
  h1= title
  //p #{query.rows} #{query.cols}
  - let rows=Number(query.rows);let cols=Number(query.cols)
  - if(!Number.isInteger(rows) || !Number.isInteger(cols)){
      p(style="color:green;font-weight:bolder") Rows and columns accepts only integers
  - }
  -  if(!(rows>=1 && rows<5)){
        p(style="color:green;font-weight:bolder") Rows should be in between 1 to 4
  - }
  -  if(!(cols>=1 && cols<5)){
        p(style="color:green;font-weight:bolder") Cols should be in between 1 to 4
  - }
  - if((rows>=1 && rows<5)&&(cols>=1 && cols<5)) {
    table(id="outer")
        - for(let i=0;i<rows;i++){
            tr#middle
                - for(let j=0;j<cols;j++){
                    td= i+j
                - }
        - }
  - }